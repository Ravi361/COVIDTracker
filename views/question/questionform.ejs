<div class="jumbotron" style="margin-top: 100px;"> 
    <div class="h3 text-center">Ask Your Question here</div>
<form action="/question" method="POST">
    <div class="form-group">
        <input class='form-control' type="text" name="author" placeholder="Enter your name..." required>
    </div>
    <div class="form-group">
        <input class='form-control' type="text" name="question" placeholder="Type your question..." required>
    </div>
    <div class="d-flex justify-content-between">
   <button class="btn btn-primary btn-sm" type="submit">Post Question</button>
   <a href='/' class="btn btn-primary btn-sm">Go Back</a>
</div>
</form>
</div>
</div>
